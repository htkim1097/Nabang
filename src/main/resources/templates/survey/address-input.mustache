{{> survey/survey-header}}

<main class="main survey-page">
    <div class="background-overlay">
        <img src="/assets/images/room1.jpg" alt="배경이미지" class="main-large-img bg-fade-img"/>
    </div>

    <h1 class="page-title survey-title">지역을 입력해주세요</h1>

    <form class="survey-form">
        <div class="select-opt-row">

            <div class="select-group">
                <label for="sido">시/도</label>
                <select id="sido" name="sido" class="main-select">
                </select>
            </div>

            <div class="select-group">
                <label for="sigungu">시/군/구</label>
                <select id="sigungu" name="sigungu" class="main-select">
                </select>
            </div>

        </div>

        <!-- Next / Previous 버튼 그룹 -->
        <div class="survey-nav-cont">
            <button id="nextBtn" type="button" class="base-btn survey-nav-btn next-btn" >Next →</button>
        </div>
    </form>

    <!-- 좌측 하단 고정 Home 버튼 -->
    <div class="side-nav">
        <button type="button" class="base-btn side-nav-btn" onclick="location.href='/'">처음으로</button>
    </div>
</main>

<script type="text/javascript" src="/js/survey/address-input.js"></script>