{{> survey/survey-header}}

<main class="main survey-page">
    {{! 배경 }}
    <div class="background-overlay">
        <img src="/assets/images/room3.jpg" alt="배경이미지" class="main-large-img bg-fade-img"/>
    </div>

    {{! 질문 글자 }}
    <h1 class="page-title survey-title">방의 유형을 선택해주세요</h1>
    
    <form class="survey-form">
        {{! 콤보박스 }}
        <div class="select-opt-row">
            <div class="select-group">
                <label for="room-type">매물 유형</label>
                <select id="room-type" name="roomType" class="main-select">
                    <option value="0">전체</option>
                    <option value="1">원룸</option>
                    <option value="2">투룸</option>
                    <option value="3">아파트</option>
                </select>
            </div>
            <div class="select-group">
                <label for="deal-type">거래 유형</label>
                <select id="deal-type" name="dealType" class="main-select">
                    <option value="0">전체</option>
                    <option value="1">월세</option>
                    <option value="2">전세</option>
                    <option value="3">매매</option>
                </select>
            </div>
        </div>

        {{! 보증금 슬라이더 }}
        <div class="slider-group">
            <label for="deposit-slider" class="slider-label">보증금(전세금)</label>
            <div id="deposit-slider"></div>
            <span id="deposit-slider-values"></span>
        </div>

        {{! 월세 슬라이더 }}
        <div class="slider-group">
            <label for="monthly-slider" class="slider-label">월세</label>
            <div id="monthly-slider"></div>
            <span id="monthly-slider-values"></span>
        </div>

        {{! Next / Previous 버튼 }}
        <div class="survey-nav-cont">
            <button type="button" class="base-btn survey-nav-btn previous-btn" onclick="location.href='/survey/1'">&larr; Previous</button>
            <button type="button" class="base-btn survey-nav-btn next-btn" onclick="location.href='/survey/3'">Next &rarr;</button>
        </div>
    </form>

    {{! 좌하단 고정 Home 버튼 }}
    <div class="side-nav">
        <button type="button" class="base-btn side-nav-btn" onclick="location.href='/'">Home</button>
    </div>
</main>

<script type="text/javascript" src="/js/survey/survey-roominfo.js"></script>