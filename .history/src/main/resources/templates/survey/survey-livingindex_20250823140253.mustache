{{> survey/survey-header}}

<main class="main-home survey-page">
    <!-- 흐린 배경 이미지 오버레이 (공통 클래스 재사용) -->
    <div class="background-overlay">
        <img src="/assets/images/room5.jpg" alt="배경이미지" class="main-large-img bg-fade-img" />
    </div>

    <!-- 상단 타이틀 (공통 .page-title, .survey-title 클래스) -->
    <h1 class="page-title survey-title">선호하는 주변환경을 선택해주세요</h1>
    
    <form class="survey-form">
        <!-- 설문 항목: 행렬 형태 (CSS는 .survey-form, .select-group 등 공통 재활용) -->
        <div class="env-table">

            <div class="env-row">
                <span class="env-label">소음</span>
                <label><input type="radio" name="noise" value="quiet"> 조용히 살고 싶어요</label>
                <label><input type="radio" name="noise" value="none"> 상관 없음</label>
            </div>
            
            <div class="env-row">
                <span class="env-label">치안</span>
                <label><input type="radio" name="security" value="active"> 나는 개복치</label>
                <label><input type="radio" name="security" value="none"> 상관 없음</label>
            </div>

            <div class="env-row">
                <span class="env-label">재난/침수</span>
                <label><input type="radio" name="safety" value="safe"> 안전한 나의 집</label>
                <label><input type="radio" name="safety" value="none"> 상관 없음</label>
            </div>

            <div class="env-row">
                <span class="env-label">상권</span>
                <label><input type="radio" name="store" value="far"> 멀리</label>
                <label><input type="radio" name="store" value="near"> 가까이</label>
                <label><input type="radio" name="store" value="none"> 상관 없음</label>
            </div>
        </div>
        
        <!-- 버튼 영역 (공통 .previous-btn, .next-btn, .form-nav, .survey-nav 클래스 재활용) -->
        <div class="form-nav survey-nav">
            <button type="button" class="base-btn previous-btn" onclick="location.href='/survey/3'">&larr; Previous</button>
            <button type="button" class="base-btn next-btn">Done &rarr;</button>
        </div>
    </form>

    <!-- 좌측 하단 Home 버튼 (공통 .side-nav, .side-nav-btn 클래스 재사용) -->
    <div class="side-nav">
        <button type="button" class="base-btn side-nav-btn">Home</button>
    </div>
</main>

<script type="text/javascript" src="/js/survey/survey-livingindex.js"></script>