{{> common/survey-header}}

<main class="main-home survey-page">
    <div class="background-overlay">
        <img src="/assets/images/room1.jpg" alt="배경이미지" class="main-large-img bg-fade-img"/>
    </div>

    <h1 class="page-title survey-title">지역을 입력해주세요</h1>

    <form class="survey-form">
        <div class="select-opt-row">
            <div class="select-group">
                <label for="city">시</label>
                <select id="city" name="city" class="main-select">
                    <option value="">전체</option>
                    <option value="daejeon">대전광역시</option>
                </select>
            </div>
            <div class="select-group">
                <label for="district">구</label>
                <select id="district" name="district" class="main-select">
                    <option value="">전체</option>
                    <option value="yuseong">유성구</option>
                    <option value="seo">서구</option>
                    <option value="dong">동구</option>
                    <option value="jung">중구</option>
                </select>
            </div>
            <div class="select-group">
                <label for="neighborhood">동</label>
                <select id="neighborhood" name="neighborhood" class="main-select">
                    <option value="">전체</option>
                </select>
            </div>
        </div>

        <!-- Next / Previous 버튼 그룹 -->
        <div class="form-nav survey-nav">
            <button type="button" class="base-btn previous-btn">← Previous</button>
            <button type="button" class="base-btn next-btn">Next →</button>
        </div>
    </form>

    <!-- 좌측 하단 고정 Home 버튼 -->
    <div class="side-nav">
        <button type="button" class="base-btn side-nav-btn">Home</button>
    </div>
</main>